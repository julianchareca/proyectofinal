@{
    ViewData["Title"] = "Form";
    var httpContextAccessor = ViewContext.HttpContext;
    var userMail = httpContextAccessor?.Session.GetString("UserMail") ?? string.Empty;
    var userNombre = httpContextAccessor?.Session.GetString("UserNombre") ?? string.Empty;
    var userApellido = httpContextAccessor?.Session.GetString("UserApellido") ?? string.Empty;
    var userTelefono = httpContextAccessor?.Session.GetString("UserTelefono") ?? string.Empty;
}
<link href="./assets/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="~/css/form-validation.css" asp-append-version="true">
@if(string.IsNullOrEmpty(userMail))
{
    <div class="mx-auto text-center col-6">
    <div class="card">
        <h4 class="card-header">Completa el siguiente formulario</h4>
        <p class="lead">Deja tu informacion para poder contactarte con nosotros</p>
        <div class="card-body">
            <form action='@Url.Action("Guardar")' method="post" enctype="multipart/form-data">
                <h6 class="card-text">Nombre</h6>
                <input type="text" name="Nombre" required><br><br>
                <h6 class="card-text">Apellido</h6>
                <input type="text" name="Apellido" required><br><br>
                <h6 class="card-text">Telefono</h6>
                <input type="number" name="Telefono" required><br><br>
                <h6 class="card-text">Mail</h6>
                <input type="email" name="Mail" placeholder="you@example.com" required><br><br>
                <h6 class="card-text">Cuerpo</h6>
                <textarea class="form-control" name="Cuerpo" rows="3" required></textarea>
                <hr class="my-4">
                <button class="w-100 btn btn-primary btn-lg" type="submit" value="Guardar">Enviar</button>
            </form>
        </div>
        <a>Otra manera de contactarte<a>
        <a href="http://wa.me/5491162165102/"><img class="imgWPP" src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6b/WhatsApp.svg/2044px-WhatsApp.svg.png" alt="WhatsApp"></a>
        </div>
    </div>
}
else{
    <div class="mx-auto text-center col-6">
    <div class="card">
        <h4 class="card-header">Completa el siguiente formulario</h4>
        <p class="lead">Deja tu informacion para poder contactarte con nosotros</p>
        <div class="card-body">
            <form action='@Url.Action("Guardar")' method="post" enctype="multipart/form-data">
                <h6 class="card-text">Nombre</h6>
                
                <input type="text" name="Nombre" value=@userNombre required><br><br>
                <h6 class="card-text">Apellido</h6>
                <input type="text" name="Apellido" value=@userApellido required><br><br>
                <h6 class="card-text">Telefono</h6>
                <input type="number" name="Telefono" value=@userTelefono required><br><br>
                <h6 class="card-text">Mail</h6>
                <input type="email" name="Mail" value=@userMail placeholder="you@example.com" required><br><br>
                <h6 class="card-text">Cuerpo</h6>
                <textarea class="form-control" name="Cuerpo" rows="3" required></textarea>
                <hr class="my-4">
                <button class="w-100 btn btn-primary btn-lg" type="submit" value="Guardar">Enviar</button>
            </form>
        </div>
        <a>Otra manera de contactarte<a>
        <a href="http://wa.me/5491162165102/"><img class="imgWPP" src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6b/WhatsApp.svg/2044px-WhatsApp.svg.png" alt="WhatsApp"></a>
        </div>
    </div>
}
